@model List<BookApp.Models.DTO.BookDto>
@{
    ViewBag.Title = "Справочник книг";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<BookApp.Models.DTO.BookDto> books = Model;
}


<div class="row">
    <div class="col-md-3">
        @using (Ajax.BeginForm("Filter", new AjaxOptions { UpdateTargetId = "books" }))
        {
        <div class="form-inline">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Поиск по названию" name="Title" />
                <input type="submit" class="btn btn-default" value="Поиск" />
            </div>
            
        </div>
            
        }
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        @Html.ActionLink("Новая книга", "Edit",new { id = 0}, new { @class = "btn btn-primary" })
    </div>

</div>

<div class="row">
    <div class="col-md-8">
        @Html.Partial("Filter",books)
    </div>
</div>

