@model BookApp.Models.DTO.PersonDto
@{
    ViewBag.Title = "Редактирование читателя";
    var person = Model;
}

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Edit", "Person", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label for="FullName">ФИО</label>
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "ФИО" })
                @Html.ValidationMessageFor(m => m.FullName,"",new { @class="text-danger"})
            </div>
            <div class="form-group">
                <label for="Birthday">День рождения</label>
                @Html.TextBoxFor(m => m.Birthday, new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(m => m.Birthday, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-default">Сохранить</button>
        }
    </div>
</div>
